- if params[:shared]
  .alert.alert-success
    Your picture was posted on your Facebook profile.

.editor
  .canvas
    .logo-overlay
      %img{:src => '/images/logo-green-purple.png'}
    .original-image
      %img.user-image{ :src => photo_url }

.actions
  %a.btn.btn-large.btn-primary{ :href => "/share/#{photo_id}" } Share on Facebook
%script{ :src => "https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" }
%script{ :src => "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" }
