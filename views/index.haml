%form{ :action => '/upload', :method => 'post', :enctype => "multipart/form-data" }
  .choose-picture
    %label.title{ :for => 'choose-picture' } Upload your picture
    %input#choose-picture{ :type => 'file', :name => 'photo'}
  .color-picker
    %h2.title Pick your message
    .controls
      %label.pink.active
        %input{ :type => 'radio', :name => 'color_scheme', :value => 'pink', :checked => 'checked' }
        Green/Pink
      %label.purple
        %input{ :type => 'radio', :name => 'color_scheme', :value => 'purple' }
        Green/Purple
      %label.orange
        %input{ :type => 'radio', :name => 'color_scheme', :value => 'orange' }
        Green/Orange
      %label.round-pink
        %input{ :type => 'radio', :name => 'color_scheme', :value => 'pink-round' }
        Round/Pink
  .generate
    %button.btn.btn-primary.btn-large{ :type => 'submit' } Generate your image!
:javascript
  $(function() {
    $('.controls label input[type="radio"]').click(function () {
      $('.controls label').removeClass('active');
      $(this).parent('label').addClass('active');
      // this is the cherry on the top
      $('body').removeAttr('class');
      $('body').addClass($(this).val());
    });
    $('input#choose-picture').on("change", function () {
      $('div.color-picker').show();
      $('div.generate').show();
    });
  });
